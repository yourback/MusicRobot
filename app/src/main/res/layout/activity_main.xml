<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/songBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar"
            android:background="#8000"
            android:visibility="gone" />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/title" />
        </android.support.design.widget.AppBarLayout>


        <!--<FrameLayout-->
        <!--android:id="@+id/fragment_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@id/appbar" />-->

        <gjjzx.com.robotclient.diy.MyRecyclerView
            android:id="@+id/myrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/appbar"
            app:layout_heightPercent="70%" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/myrecyclerview"
            app:layout_heightPercent="30%">

            <ImageView
                android:id="@+id/last"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/start_stop"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:src="@mipmap/last"
                app:layout_heightPercent="80%" />

            <ImageView
                android:id="@+id/start_stop"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:tooltipText="夜曲 正在播放"
                android:src="@mipmap/play"
                app:layout_heightPercent="80%"
                app:layout_widthPercent="30%" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/start_stop"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:src="@mipmap/next"
                app:layout_heightPercent="80%" />


        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/my_navigation_items" />


</android.support.v4.widget.DrawerLayout>
